<?xml version="1.0" encoding="utf-8"?>
<plugin id="taqtile-cordova-plugin-deeplinks" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>DeeplinkWrapper</name>

	<js-module name="DeeplinkWrapper" src="www/DeeplinkWrapper.js">
		<clobbers target="cordova.plugins.DeeplinkWrapper" />
	</js-module>

	<platform name="ios">
		<config-file parent="/*" target="config.xml">
			<feature name="DeeplinkPlugin">
				<param name="ios-package" value="DeeplinkPlugin" />
			</feature>
		</config-file>

    <config-file target="*-Info.plist" parent="CFBundleURLTypes">
      <array>
        <dict>
          <key>CFBundleURLName</key>
          <string>dgapp</string>
          <key>CFBundleURLSchemes</key>
          <array>
              <string>dgapp</string>
          </array>
        </dict>
      </array>
    </config-file>

	
		<header-file src="src/ios/DeeplinkPlugin.h" />
		<source-file src="src/ios/DeeplinkPlugin.m" />
        <header-file src="src/ios/AppDelegate+DeeplinkPlugin.h" />
        <source-file src="src/ios/AppDelegate+DeeplinkPlugin.m" />
	</platform>

	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="DeeplinkWrapper">
				<param name="android-package" value="deeplinks.DeeplinkWrapper" />
			</feature>
		</config-file>

		<config-file parent="application/activity" target="AndroidManifest.xml">
			<intent-filter android:label="dgapp://home">
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="dgapp" android:host="home" />
			</intent-filter>
		</config-file>
		<source-file src="src/android/DeeplinkWrapper.java" target-dir="src/deeplinks" />
	</platform>
</plugin>
